<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/addbutton1"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Claim" />

    <EditText
        android:id="@+id/decribeText2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_above="@+id/addbutton1"
        android:layout_alignLeft="@+id/dateText2"
        android:ems="10"
        android:gravity="left|top"
        android:hint="Description"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/dateText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/decribeText2"
        android:layout_alignLeft="@+id/dateText1"
        android:layout_marginBottom="33dp"
        android:ems="10"
        android:hint="To (DD/MM/Year)"
        android:inputType="date" />

    <EditText
        android:id="@+id/dateText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/dateText2"
        android:layout_alignLeft="@+id/nameText1"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:hint="From (DD/MM/Year)"
        android:inputType="date" />

    <EditText
        android:id="@+id/nameText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

</RelativeLayout>
